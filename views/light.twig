{% extends 'layout.twig' %}
{% set role = 'light' %}
{% block head %}
    <meta name="renderer" content="webkit">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
{% endblock %}
{% block bodyClass %}light{% endblock %}
{% block body %}
    <section class="program-info text-center">
        <header>
            <h2>{{ channel }}</h2>
            <h3><strong>00</strong><span>-</span></h3>
        </header>
        <div>
            <progress></progress>
            <p><span class="current"></span>/<span class="total"></span></p>
        </div>
    </section>
    <table class="table table-bordered table-striped table-condensed light-sequence">
        <thead>
        <tr><th>时间</th><th>色</th><th>内容</th></tr>
        </thead>
        <tbody>
        </tbody>
    </table>
{% endblock %}